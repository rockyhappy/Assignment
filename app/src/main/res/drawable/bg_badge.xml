<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="120dp"
                android:bottomRightRadius="120dp"/>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@color/eng_extra_e_orange_2" />
        </shape>
    </item>

    <!-- Inner fill layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="120dp"
                android:bottomRightRadius="120dp"/>
            <solid android:color="@color/eng_extra_e_orange_1" />
        </shape>
    </item>
</layer-list>